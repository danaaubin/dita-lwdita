<reference id="lw-i">
  <title>Italic text</title>
  <shortdesc conkeyref="reuse-i/shortdesc"/>
    <refbody>
    <section>
      <title>Syntax</title>
      <dl>
        <dlentry>
          <dt>XDITA</dt>
          <dd>
            <p><xmlelement>i</xmlelement> </p></dd>
          </dlentry>
        <dlentry>
          <dt>HDITA</dt>
          <dd>
            <p><xmlelement>em</xmlelement> </p></dd>
        </dlentry>
        <dlentry>
          <dt>MDITA (core and extended profiles)</dt>
          <dd>
            <p><codeph>*</codeph> or <codeph>_</codeph> </p>
          </dd>
        </dlentry>
      </dl>
    </section>

